<div class="max-w-sm w-full bg-white shadow-lg rounded-lg pointer-events-auto hidden"
     data-controller="notification--component"
     data-notification--component-timeout-value="<%= @data[:timeout] %>"
     data-notification--component-action-url-value="<%= @data.dig(:action, :url) %>"
     data-notification--component-action-method-value="<%= @data.dig(:action, :method) %>"
     >
  <div class="rounded-lg shadow-xs overflow-hidden">
    <div class="p-4">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="h-6 w-6 <%= @icon_color %> flex items-center justify-center">
            <%= octicon @icon_name %>
          </div>
        </div>
        <div class="ml-3 w-0 flex-1 pt-0.5">
          <p class="text-sm leading-5 font-medium text-gray-900">
            <%= @data[:title] %>
          </p>
          <% if @data[:body].present? %>
            <p class="mt-1 text-sm leading-5 text-gray-500">
              <%= @data[:body] %>
            </p>
          <% end %>
          <% if @data[:action].present? %>
            <div class="mt-2"
                 data-notification--component-target="buttons"
                 >
              <a <% if @data.dig(:action, :method) == 'get' %> href="<%= @data.dig(:action, :url) %>" <% else %> href="#" data-action="notification--component#run" <% end %> class="text-sm leading-5 font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition ease-in-out duration-150">
                <%= @data.dig(:action, :name) %>
              </a>

              <button class="ml-6 text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:underline transition ease-in-out duration-150"
                      data-action="notification--component#close"
                      >
                <%= t('.dismiss') %>
              </button>
            </div>
          <% end %>
        </div>
        <div class="ml-4 flex-shrink-0 flex">
          <button class="inline-flex text-gray-400 focus:outline-none focus:text-gray-500 transition ease-in-out duration-150"
                  data-action="notification--component#close"
                  >
            <%= octicon "x", class: "h-5 w-5" %>
          </button>
        </div>
      </div>
    </div>
    <% if @data[:countdown] %>
      <div class="bg-indigo-600 rounded-lg h-1 w-0"
           data-notification--component-target="countdown"
           >
      </div>
    <% end %>
  </div>
</div>
